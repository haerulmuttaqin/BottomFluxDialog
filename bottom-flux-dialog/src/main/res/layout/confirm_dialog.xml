<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp">

        <ImageView
            android:layout_width="40dp"
            android:layout_height="5dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="8dp"
            android:background="@drawable/bg_round" />

        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:layout_marginBottom="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/image"
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginStart="36dp"
                android:layout_marginEnd="36dp"
                android:layout_marginBottom="20dp" />

            <TextView
                android:id="@+id/title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/black"
                android:gravity="center"
                android:text="Title"
                android:textColor="@color/titleColor"
                android:textSize="@dimen/titleText" />

            <TextView
                android:id="@+id/message"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="20dp"
                android:fontFamily="@font/medium"
                android:gravity="center"
                android:text="Message"
                android:textColor="@color/messageColor"
                android:textSize="@dimen/messageText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/actionLayout"
            android:layout_below="@id/content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">

            <Button
                android:id="@+id/a_btn"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="6dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="26dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round_secondary_selector"
                android:fontFamily="@font/bold"
                android:text="@string/cancel"
                android:textColor="@color/btnSecondaryColor" />

            <Button
                android:id="@+id/b_btn"
                android:layout_width="0dp"
                android:layout_height="40dp"
                android:layout_marginTop="6dp"
                android:layout_marginEnd="16dp"
                android:layout_marginBottom="26dp"
                android:layout_weight="1"
                android:background="@drawable/btn_round_primary_selector"
                android:fontFamily="@font/bold"
                android:singleLine="true"
                android:text="OK"
                android:textColor="@color/colorWhite" />


        </LinearLayout>
    </RelativeLayout>

</LinearLayout>